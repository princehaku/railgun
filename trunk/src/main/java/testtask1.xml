<?xml version="1.0" encoding="UTF-8"?>
<shell>
    <name>wordpress</name>
    <description>common rules for wordpress blog</description>
    <baseurl>*</baseurl>
    <fetch>
        <url>http://blog.nosqlfan.com/</url>
        <cookie>enable</cookie>
        <charset>auto</charset>
        <params>
            <param>
                <key>User-Agent</key>
                <value>Mozilla/5.0 (Windows NT 6.1; WOW64; rv:2.0.1) Gecko/20100101 Firefox/4.0.1</value>
            </param>
            <param>
                <key>By</key>
                <value>princehaku</value>
            </param>
        </params>
        <cookies>
            <cookie>
                <key>a</key>
                <value>b</value>
            </cookie>
        </cookies>
    </fetch>
    <parse method="dom" rule="#content div" filter="net.techest.testFilter">
        <parse method="dom" fork="true" rule="#main div">
            <store>APP_ROOT/tmp/DATA TIME</store>
        </parse>
        <parse method="regxp" fork="true" rule="img src=&quot;([\s\S]*?)&quot;">
            <fetch>
                <url>$1</url>
            </fetch>
            <store>APP_ROOT/tmp/DATA TIME</store>
        </parse>
    </parse>
    <store>APP_ROOT/tmp/DATA TIME</store>
</shell>
