<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE shell SYSTEM "shell.dtd">
<shell>
    <name>3haku.net</name>
    <description>rules for wordpress blog 3haku.net</description>
    <baseurl>3haku</baseurl>
    <fetch>
        <url>http://3haku.net/</url>
        <charset>auto</charset>
        <params>
            <param>
                <key>User-Agent</key>
                <value>railgun</value>
            </param>
        </params>
        <timeout>10000</timeout>
    </fetch>
    <parse method="dom">
        <rule>a</rule>
    </parse>
    <parse fork="true" method="regxp">
        <rule><![CDATA[href="(.*?)"]]>
        </rule>
        <store ext=".html">cache/html/</store>
    </parse>
    <fetch filter-after="net.techest.railgun.test.TestFilter">
        <url>${1}</url>
    </fetch>
    <store ext=".html">cache/html/${1}</store>
</shell>
